<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path, method: :post do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="form-group mb-3 row">
    <label for="Name" class="col-sm-3 col-form-label">名前</label>
    <div class="col-sm-9">
      （姓）<%= f.text_field :family_name, placeholder: "令和" %>
      （名）<%= f.text_field :first_name, placeholder: "道子" %>
    </div>
  </div>

  <div class="form-group mb-3 row">
    <label for="NameKana" class="col-sm-3 col-form-label">フリガナ</label>
    <div class="col-sm-9">
      （姓）<%= f.text_field :family_name_kana, placeholder: "レイワ" %>
      （名）<%= f.text_field :first_name_kana, placeholder: "ミチコ" %>
    </div>
  </div>

  <div class="form-group mb-3 row">
    <label for="Email" class="col-sm-3 col-form-label">メールアドレス</label>
    <div class="col-sm-9">
      &emsp;&emsp;&emsp;<%= f.email_field :email, autofocus: true, autocomplete: "sample@example.com" %>
    </div>
  </div>

  <div class="form-group mb-3 row">
    <label for="PhoneNumber" class="col-sm-3 col-form-label">郵便番号（ハイフンなし）</label>
    <div class="col-sm-9">
      &emsp;&emsp;&emsp;<%= f.text_field :post_code, autofocus: true, autocomplete: "0000000000" %>
    </div>
  </div>

  <div class="form-group mb-3 row">
    <label for="Address" class="col-sm-3 col-form-label">住所</label>
    <div class="col-sm-9">
      &emsp;&emsp;&emsp;<%= f.text_field :address, autofocus: true, autocomplete: "東京都渋谷区代々木神園町0-0" %>
    </div>
  </div>

  <div class="form-group mb-3 row">
    <label for="PhoneNumber" class="col-sm-3 col-form-label">電話番号（ハイフンなし）</label>
    <div class="col-sm-9">
      &emsp;&emsp;&emsp;<%= f.text_field :phone_number, autofocus: true, autocomplete: "0000000000" %>
    </div>
  </div>

  <div class="form-group mb-3 row">
    <label for="Password" class="col-sm-3 col-form-label">パスワード（6文字以上）</label>
    <div class="col-sm-9">
      &emsp;&emsp;&emsp;<%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="form-group mb-3 row">
    <label for="Password" class="col-sm-3 col-form-label">パスワード（確認用）</label>
    <div class="col-sm-9">
      &emsp;&emsp;&emsp;<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>

<% end %>

<%= render "public/shared/links" %>
