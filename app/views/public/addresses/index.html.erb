<h3>配送先登録/一覧</h3>
<%= render 'form', address: @address %>

<table class="table table-bordered mt-3">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to '編集', edit_address_path, class: "btn btn-success" %>
          <%= link_to '削除', address_path, method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>