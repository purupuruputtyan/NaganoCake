<%= form_with model: @item  url: url do |f| %>
  <div class="form-group mb-3 row">
    <label for="inputItemFile" class="col-sm-2 col-form-label">商品画像</label>
    <div class="col-sm-10">
      <%= f.file_field :image, accept: "image/*" %>
    </div>
  </div>

  <div class="form-group mb-3 row">
    <label for="inputItemName" class="col-sm-2 col-form-label">商品名</label>
    <div class="col-sm-10">
      <%= f.text_field :name, accept: "image/*" %>
    </div>
  </div>

  <div class="form-group mb-3 row">
    <label for="inputItemName" class="col-sm-2 col-form-label">商品説明</label>
    <div class="col-sm-10">
      <%= f.text_field :introduction, placeholder: "ショートケーキ" %>
    </div>
  </div>

  <div class="form-group mb-3 row">
    <label for="inputItemName" class="col-sm-2 col-form-label">ジャンル</label>
    <div class="col-sm-10">
      <%= f.text_field :genre, placeholder: "自慢のイチゴをふんだんに使用しております。" %>
    </div>
  </div>

  <div class="form-group mb-3 row">
    <label for="inputItemName" class="col-sm-2 col-form-label">税抜価格</label>
    <div class="col-sm-10">
      <%= f.text_field :genre, placeholder: "10000円" %>
    </div>
  </div>

  <div class="form-group mb-3 row">
    <label for="inputItemName" class="col-sm-2 col-form-label">販売ステータス</label>
    <div class="col-sm-10">
      <%= f.radio_button :sell_status, "now_on_sale" %>
      <%= f.label :sell_status_now_on_sale, "販売中" %>

      <%= f.radio_button :sell_status, "sales_stop" %>
      <%= f.label :sell_status_sales_stop, "販売停止" %>
    </div>
  </div>

  <div class="form-group mb-3 row">
    <%= f.submit 'submit', class: "btn btn-success" %>
  </div>

<% end %>