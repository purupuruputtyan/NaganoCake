<h2 class="bg-light col-lg-4 col-md-5 col-sm-8">商品新規登録</h2>
<%= form_with model: @item do |f| %>
  <div class="form-group mb-3 row">
    <label for="inputItemFile" class="col-sm-2 col-form-label">商品画像</label>
    <div class="col-sm-10">
      <%= f.file_field :image, accept: "image/*" %>
    </div>
  </div>

  <div class="form-group mb-3 row">
    <label for="inputItemName" class="col-sm-2 col-form-label">商品名</label>
    <div class="col-sm-10">
      <%= f.text_field :name, accept: "image/*" %>
    </div>
  </div>

<% end %>