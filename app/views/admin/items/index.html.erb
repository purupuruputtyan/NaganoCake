<h3>商品一覧</h3>
<%= link_to '新規登録', new_admin_item_path %>
<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id) %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <td class="font-weight-bold">
          <% if item.sell_status_i18n == "販売中" %>
            <div class="sell_status_0">販売中</div>
          <% else %>
            <div class="sell_status_1">販売停止中</div>
          <% end %>
        </td>
        <td><%= link_to '編集', edit_admin_item_path(item.id), class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>