<h3>ジャンル一覧・追加</h3>
<h4>ジャンル名</h4>
<%= render 'form', genre: @genre, url: admin_genres_path %>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>