<h3>ジャンル一覧・追加</h3>
<h4>ジャンル名</h4>
<%= render 'layouts/errors', obj: @genre %>
<%= render 'form', genre: @genre, url: admin_genres_path %>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to '編集', edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
        <td><%= link_to '削除', admin_genre_path(genre.id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に削除しますか？" %></td>
      </tr>
    <% end %>
  </tbody>
</table>