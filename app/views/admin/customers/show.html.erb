<h3><%= customer.family_name + customer.first_name %>さんの会員詳細</h3>
<div class="row">
    <div class="col-lg-12">
    <div class="row">
      <div class="col-3">会員ID　</div>
      <div class="col-3"><%= @customer.id %></div>
    </div>
    <div class="row">
      <div class="col-3">氏名　</div>
      <div class="col-3"><%= @customer.family_name %>　<%= @customer.first_name %></div>
    </div>
    <div class="row">
      <div class="col-3">フリガナ　</div>
      <div class="col-3"><%= @customer.family_name_kana %>　<%= @customer.first_name_kana %></div>
    </div>
    <div class="row">
      <div class="col-3">郵便番号　</div>
      <div class="col-3"><%= @customer.post_code %></div>
    </div>
    <div class="row">
      <div class="col-3">住所　</div>
      <div class="col-3"><%= @customer.address %></div>
    </div>
    <div class="row">
      <div class="col-3">電話番号　</div>
      <div class="col-3"><%= @customer.phone_number %></div>
    </div>
    <div class="row">
      <div class="col-3">メールアドレス　</div>
      <div class="col-3"><%= @customer.email %></div>
    </div>
    <div class="row">
      <div class="col-3">会員ステータス　</div>
      <div class="col-3" class="font-weight-bold">
        <% if @customer.is_deleted == false %>
          <div class="text-success"><%= "有効" %></div>
        <% else %>
          <div class="text-muted"><%= "退会済み" %></div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-3"></div>
      <div class="col-6">
        <div class="d-grid gap-2 d-md-block">
          <div class="btn btn-success">
            <%= link_to "編集する", edit_admin_customer_path(@customer), class: 'text-light text-decoration-none' %>
          </div>
          <div class="btn btn-primary">
            <%= link_to "注文履歴一覧を見る", admin_path(@customer.id), class: 'text-light text-decoration-none' %>
          </div>
        </div>
      </div>
    </div>
    </div>
  </div>